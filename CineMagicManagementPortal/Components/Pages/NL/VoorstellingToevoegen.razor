@page "/voorstellingtoevoegen"
<PageTitle>NL - CineMagic Managementportaal - Voorstelling toevoegen</PageTitle>
<div class="zaal-toevoegen">
  <h1 class="text-center">Voorstelling toevoegen</h1>
 <form @submit="VoegZaalToe" style="margin-top:50px !important; margin-left: 36%;">
     <div class="form-group row">
       <label for="zaalnummer" class="col-sm-2 col-form-label">Zaalnummer:</label>
       <div class="col-sm-10">
         <input type="number" style="background-color:black; border: none;" class="form-control" id="zaalnummer" @bind="Zaalnummer" placeholder="Vul Zaalnummer in" required>
         <hr style="color:#707070; width: 200px; margin-top:5px;" />
       </div>
     </div>
     <div class="form-group row">
       <label for="filmtitel" class="col-sm-2 col-form-label">Film titel:</label>
       <div class="col-sm-10">
         <input type="number" style="background-color:black; border: none;" class="form-control" id="filmtitel" @bind="AantalZitplaatsen" placeholder="Vul filmtitel in" required>
         <hr style="color:#707070; width: 200px; margin-top:5px;" />
       </div>
     </div>
     <div class="form-group row">
       <label for="datum" class="col-sm-2 col-form-label">Date:</label>
       <div class="col-sm-10">
         <input type="datetime" style="background-color:black; border: none;" class="form-control" id="datum" @bind="AantalRijen" placeholder="vul datum in" required>
         <hr style="color:#707070; width: 200px; margin-top:5px;" />
       </div>
     </div>
     
     <button type="submit" style="background-color:#9f0202; border: none;" class="btn btn-primary">Voorstelling toevoegen</button>
   </form>
  
 
</div>


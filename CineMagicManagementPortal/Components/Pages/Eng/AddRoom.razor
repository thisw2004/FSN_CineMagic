@page "/addRoom"
<PageTitle>Eng - Add room</PageTitle>

<div class="zaal-toevoegen">
  <h1 class="text-center" >Add room</h1>
 <form @submit="VoegZaalToe" style="margin-top:50px !important; margin-left: 36%;">
     <div class="form-group row">
       <label for="zaalnummer" class="col-sm-2 col-form-label">Roomnumber:</label>
       <div class="col-sm-10">
         <input type="number" style="background-color:black; border: none;" class="form-control" id="zaalnummer" @bind="Zaalnummer" placeholder="Enter roomnumber" required>
         <hr style="color:#707070; width: 200px; margin-top:5px;" />
       </div>
     </div>
     <div class="form-group row">
       <label for="aantalZitplaatsen" class="col-sm-2 col-form-label">Number of seats:</label>
       <div class="col-sm-10">
         <input type="number" style="background-color:black; border: none;" class="form-control" id="aantalZitplaatsen" @bind="AantalZitplaatsen" placeholder="Enter number of seats" required>
         <hr style="color:#707070; width: 200px; margin-top:5px;" />
       </div>
     </div>
     <div class="form-group row">
       <label for="aantalRijen" class="col-sm-2 col-form-label">Number of rows:</label>
       <div class="col-sm-10">
         <input type="number" style="background-color:black; border: none;" class="form-control" id="aantalRijen" @bind="AantalRijen" placeholder="Enter number of rows" required>
         <hr style="color:#707070; width: 200px; margin-top:5px;" />
       </div>
     </div>
     <div class="form-group row">
       <label for="ruimte" class="col-sm-2 col-form-label">Roomname:</label>
       <div class="col-sm-10">
         <input type="text" style="background-color:black; border: none;" class="form-control" id="ruimte" @bind="Ruimte" placeholder="Enter room name" required>
         <hr style="color:#707070; width: 200px; margin-top:5px;" />
       </div>
     </div>
     <button type="submit" style="background-color:#9f0202; border: none;" class="btn btn-primary">Add room</button>
   </form>
  
 
</div>

@code {
    // Properties
    private int? Zaalnummer { get; set; }
    private int? AantalZitplaatsen { get; set; }
    private int? AantalRijen { get; set; }
    private string Ruimte { get; set; }


        <div style="margin-top: 10px;">
            <input @bind="Zaalnummer" style="
                background-color: black;
                color: grey;
                border-bottom-color: grey;
                border-right: 0;
                width: 10%;
                height: 30px;" placeholder="Zaalnummer" type="number">
        </div>
        <div style="margin-top: 10px;">
            <input @bind="AantalZitplaatsen" style="

        </div>
        <div style="margin-top: 10px;">
            <input @bind="AantalRijen" style="
                background-color: black;
                color: grey;
                border-bottom-color: grey;
                border-right: 0;
                width: 10%;
                height: 30px;" placeholder="Aantal rijen" type="number">
        </div>
        <div style="margin-top: 10px;">
            <input @bind="Ruimte" style="
                background-color: black;
                color: grey;
                border-bottom-color: grey;
                border-right: 0;
                width: 10%;
                height: 30px;" placeholder="Ruimte">
        </div>
        <div style="margin-top: 20px;">
            <button style="
                background-color: darkred;
                color:white;
                border-radius: 20px;
                height: 30px;
                width: 150px;" @onclick="VoegZaalToe">Zaal toevoegen</button>
        </div>
    </div>
</div>

@code {
    // Properties
    private int Zaalnummer { get; set; }
    private int AantalZitplaatsen { get; set; }
    private int AantalRijen { get; set; }
    private string Ruimte { get; set; }


@page "/addrooms"
<PageTitle>Add a new room</PageTitle>

<h3>AddRoom</h3>



<div class="container mt-5">
    <h2>Add New Room</h2>
    <form action="/your-room-addition-endpoint" method="post">
        <div class="mb-3">
            <label for="roomNumber" class="form-label">Room Number</label>
            <input type="text" class="form-control" id="roomNumber" name="roomNumber" required>
        </div>
        <div class="mb-3">
            <label for="amountOfSeats" class="form-label">Amount of Seats</label>
            <input type="number" class="form-control" id="amountOfSeats" name="amountOfSeats" required>
        </div>
        <div class="mb-3">
            <label for="amountOfRows" class="form-label">Amount of Rows</label>
            <input type="number" class="form-control" id="amountOfRows" name="amountOfRows" required>
        </div>
        <div class="mb-3">
            <label for="size" class="form-label">Size (in square meters)</label>
            <input type="text" class="form-control" id="size" name="size" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>


@page "/addshows"

<h3>Add Show</h3>
<PageTitle>Add a new show</PageTitle>
<div class="container mt-5">
    <h2>Add New Show</h2>
    <form>
        <div class="mb-3">
            <label for="roomNumber" class="form-label">Room Number</label>
            <select class="form-control" id="roomNumber">
                @* Populate this list with actual room numbers from your database or a predefined list *@
                <option value="1">Room 1</option>
                <option value="2">Room 2</option>
                <!-- More room options -->
            </select>
        </div>
        <div class="mb-3">
            <label for="filmTitle" class="form-label">Film Title</label>
            <select class="form-control" id="filmTitle">
                @* Populate this list with actual film titles from your database or a predefined list *@
                <option value="Movie1">Movie 1</option>
                <option value="Movie2">Movie 2</option>
                <!-- More film options -->
            </select>
        </div>
        <div class="mb-3">
            <label for="showDateTime" class="form-label">Date and Time</label>
            <input type="datetime-local" class="form-control" id="showDateTime">
        </div>
        <button type="submit" class="btn btn-primary">Add Show</button>
    </form>
</div>


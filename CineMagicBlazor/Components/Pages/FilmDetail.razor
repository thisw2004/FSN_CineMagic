@page "/film-details/{id:int}"
@using CineMagicData.Models
@using CineMagicBlazor.Services
@inject MovieService MovieService

<div style="background-color: #ff961d; height: 20vh; width: 100%;">
    <!-- TODO: Voeg het logo hier toe -->
</div>

<div style="padding-top: 30px; padding-left: 80px; display: flex;">
    <div style="text-align: center; width: 70%;">
        <h1>@_movie.Title</h1>
        <div style="text-align: center;">
            <p>@_movie.Description</p>
            <!-- You can bind the text dynamically to a property in your code behind -->
        </div>
    </div>
    <div style="width: 30%;">
        <!-- Add any additional content here if needed -->
    </div>
</div>

@code {

    [Parameter] 
    public int Id { get; set; }

    private Movie _movie = new Movie();
    
    protected override async Task OnInitializedAsync()
    {
        _movie = await MovieService.GetMovieById(Id);
    }
}


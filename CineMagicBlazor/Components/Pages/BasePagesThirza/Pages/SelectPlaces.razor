@page "/select-places"

<h3>Select Tickets</h3>

<div class="seating-chart">
    <!-- Display the seating chart here -->
    <!-- You can use CSS grid or any other layout technique -->
    <!-- For simplicity, let's assume a 5x5 grid -->
    @for (int row = 1; row <= 5; row++)
    {
        <div class="row">
            @for (int seat = 1; seat <= 5; seat++)
            {
                <button @onclick="() => SelectSeat(row, seat)">
                    @($"{row}-{seat}") <!-- Display seat number -->
                </button>
            }
        </div>
    }
</div>

<div class="selected-seats">
    <p>You have selected:</p>
    @foreach (var selectedSeat in selectedSeats)
    {
        <span>@selectedSeat</span>
    }
</div>

<button @onclick="OrderTickets">Order Tickets</button>

@code {
    List<string> selectedSeats = new List<string>();

    void SelectSeat(int row, int seat)
    {
        var seatNumber = $"{row}-{seat}";
        if (!selectedSeats.Contains(seatNumber))
        {
            selectedSeats.Add(seatNumber);
        }
        else
        {
            selectedSeats.Remove(seatNumber);
        }
    }

    void OrderTickets()
    {
        // Implement ticket ordering logic here
        // You can navigate to a confirmation page or perform any other action
    }
}